 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>- <function>tidy::repairFile</function> örneği</title>
    <programlisting role="php">
<![CDATA[
<?php
$file = 'file.html';

$tidy = new tidy();
$repaired = $tidy->repairfile($file);
rename($file, $file . '.bak');

file_put_contents($file, $repaired);
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

